<Window x:Class="RemotePLC.src.ui.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NlogViewer;assembly=NlogViewer"
        mc:Ignorable="d"
        Title="LogWindow" Height="480" Width="640" WindowStartupLocation="CenterOwner">
    <Grid>
        <ScrollViewer x:Name="logScroll">
            <local:NlogViewer x:Name="logCtrl" TimeWidth="auto" LoggerNameWidth="0" LevelWidth="auto" MessageWidth="auto" LayoutUpdated="logCtrl_LayoutUpdated"/>
        </ScrollViewer>
    </Grid>
</Window>
